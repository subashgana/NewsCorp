<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="imagesFragment"
            type="com.newscorp.ImagesFragment"/>

        <variable
            name="imageUrl"
            type="String"/>

        <variable
            name="imageModel"
            type="com.newscorp.ImageModel"/>

    </data>

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{imagesFragment.onClick}"
            android:transitionName="@string/activity_image_trans"
            app:imageUrl="@{imageModel.url}"/>

        <TextView
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4f000000"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="4"
            android:padding="4dip"
            android:text="@{imageModel.title}"
            android:textColor="#ffffff"
            android:transitionName="@string/activity_title_trans"/>

    </RelativeLayout>

</layout>


